- enrollments = @report.enrollment_status[site]
.table-container.pad-left-30.margin-top-40
  .sub-table-title= site == 'all' ? 'All Sites' : @report.site_names[site]
  %table
    %thead
      %tr.header-row
        %th 
        %th Intervention
        %th Usual Care
        %th %
    %tbody
      %tr.table-row
        %td Enrolled
        %td= enrollments['enrolled_intervention']
        %td= enrollments['enrolled_usual_care']
        %td 100
      %tr.table-row
        %td
          .pad-left-20 Consent in person
        %td= enrollments['in_person_intervention']
        %td= enrollments['in_person_usual_care']
        %td= sprintf('%.1f', enrollments['in_person_percent'])
      %tr.table-row
        %td
          .pad-left-20 eConsent
        %td= enrollments['econsent_intervention']
        %td= enrollments['econsent_usual_care']
        %td= sprintf('%.1f', enrollments['econsent_percent'])
      %tr.table-row
        %td Active
        %td= enrollments['active_intervention']
        %td= enrollments['active_usual_care']
        %td= sprintf('%.1f', enrollments['active_percent'])
      %tr.table-row
        %td Completed
        %td= enrollments['completed_intervention']
        %td= enrollments['completed_usual_care']
        %td= sprintf('%.1f', enrollments['completed_percent'])
      %tr.light-header-row
        %td
        %td
