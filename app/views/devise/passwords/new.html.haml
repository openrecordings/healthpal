#logo-container.margin-bottom-20
  #logo-spans
    %span.image#icon= image_tag('open_recordings_icon.png', width: '50px')
    #logo-text-container
      %span#logo-open Open
      %span#logo-recordings> Recordings
      %br
      %span#logo-health Health
      %span#logo-pal> PAL
.full-center.margin-top-neg-100
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    %p.form-title Forgot your password?
    .form-label= t(:enter_email_address)
    = f.email_field :email,
      autofocus: true,
      placeholder: t(:enter_email_address),
      class: 'form-input email-input',
      data: {placeholder: t(:enter_email_address)}
    .input-underscore-tight
    = f.submit "Send me reset password instructions", class: 'button'
    .margin-top-20= link_to 'Back to sign-in screen', new_user_session_path, class: 'form-link'