= devise_error_messages!
.ic3d_small_form
  %h2= "Set your password for #{app_display_name}"
  = bootstrap_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
    = f.hidden_field :invitation_token
    - if f.object.class.require_password_on_accepting
      %p
        = f.password_field :password
      %p
        = f.password_field :password_confirmation
    %p= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary'
