.centered-form-container
  .title.text-center
    - if resource.requires_phone_confirmation
      You should have received a text message with a four-digit confirmation code at your phone number ending in
      = resource.phone_number[-4..-1]
      %br
      = link_to 'click here to generate a new code', root_path
      %br
      %br
      Enter your confirmation code and choose a password for HealthPal
    - else
      Choose a password for HealthPal
    %br
    %br
  = form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
    = f.hidden_field :invitation_token
    - if f.object.class.require_password_on_accepting
      - if resource.requires_phone_confirmation
        .form-field-container
          .form-label Four-digit confirmation code
          = f.text_field :phone_token, value: nil, class: 'form-input'
      .form-field-container
        .form-label Password
        = f.password_field :password, class: 'form-input'
      .form-field-container
        .form-label Password confirmation
        = f.password_field :password_confirmation, class: 'form-input'
      .form-field-container.full-center
        = f.submit 'Submit', class: 'button'
