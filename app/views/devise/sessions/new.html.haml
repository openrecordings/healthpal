.centered-form-container
  .form-input-container
    #logo-container.margin-bottom-60
      #logo-spans{style: 'background-color:white'}
        %span.image#icon= image_tag('open_recordings_icon.png', width: '50px')
        #logo-text-container
          %span#logo-open Open
          %span#logo-recordings> Recordings
          %br
          %span#logo-health Health
          %span#logo-pal> PAL
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-field-container
        .form-label.invisible= t(:email_address)
        = f.email_field :email,
          autofocus: true,
          placeholder: t(:email_address),
          class: 'form-input',
          data: {placeholder: t(:email_address)}
        .input-underscore
      .form-field-container
        .form-label.invisible= t(:password)
        = f.password_field :password,
          autocomplete: 'off',
          placeholder: t(:password),
          class: 'form-input',
          data: {placeholder: t(:password)}
        .input-underscore
      .form-field-container
        = f.submit t(:log_in), class: 'button' , id: 'login-button'
      .form-field-container
        = link_to t(:forgot_password), new_user_password_path, class: 'blue-link'
