#logo-container.margin-bottom-20
  #logo-spans
    %span.image#icon= image_tag('open_recordings_icon.png', width: '50px')
    #logo-text-container
      %span#logo-open Open
      %span#logo-recordings> Recordings
      %br
      %span#logo-health Health
      %span#logo-pal> PAL
#toggle-locale-signin.responsive-font-size= {en: 'Espa√±ol', es: 'English'}[I18n.locale]
.full-center.margin-top-neg-100
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-label.invisible= t(:email_address)
    = f.email_field :email,
      autofocus: true,
      placeholder: t(:email_address),
      class: 'form-input',
      data: {placeholder: t(:email_address)}
    .input-underscore
    .form-label.invisible= t(:password)
    = f.password_field :password,
      autocomplete: 'off',
      placeholder: t(:password),
      class: 'form-input',
      data: {placeholder: t(:password)}
    .input-underscore
    = f.submit t(:log_in), class: 'button' , id: 'login-button'
    = link_to t(:forgot_password), new_user_password_path, class: 'form-link'
