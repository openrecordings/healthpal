.centered-form-container
  -# #open-share-form-title.form-title.margin-bottom-10
  -#   = t(:share_recordings)
  -# = submit_tag t(:add_share), class: 'button', id: 'open-share-form'
  #new-share-form.form-input-container
    .text-center.big-title.margin-bottom-40
      = t(:share_who)
    = form_tag url: shares_path do
      .form-field-container.field-centered
        .form-label
          = t(:full_name)
        = text_field :first_name, nil, class: 'form-input', placeholder: 'Full name'
      .form-field-container.field-centered
        .form-label
          = t(:phone_number)
        = text_field :phone_number, nil, class: 'form-input phone-number', placeholder: 'Phone number'
      .form-field-container.field-centered
        .form-label
          = t(:email_address)
        = email_field :email, nil, class: 'form-input', placeholder: 'Email address'
      .form-field-container.field-centered.margin-top-40
        = submit_tag 'Share with this person', class: 'button', id: 'new-share-submit'

  - if @shares.any?
    -# TODO: Figure out overflow problem and remove %br
    %br
    %br
    .text-center= t(:sharing_with)
    .table-container
      %table.margin-top-20
        %thead
          %tr.header-row
            %th= t(:name)
            %th= t(:email_address)
            %th
        %tbody
          - @shares.each do |s|
            %tr.table-row
              %td= s.shared_with.full_name
              %td= s.shared_with.email
              %td= link_to t(:stop_sharing), 'javascript:;', class: 'text-link revoke-share', data: {'share-id': s.id}
