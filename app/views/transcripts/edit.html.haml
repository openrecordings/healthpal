%h3= "Transcript for #{@transcript.recording.user.email}, recorded #{format_date_time @transcript.recording.created_at}"
%div#recording-container{data: {file: @transcript.recording_id}}
%table.table.table
  %thead
    %tr
      %th mm:ss
      %th Tags
      %th Text
    %tbody
      - @transcript.utterances.each do |utterance|
        %tr.segment{data: {time: utterance.begins_at}}
          %td= link_to (mm_ss utterance.begins_at), 'javascript:;', class: "seek"
          %td
            %select#e1.tagger{multiple:"Multiple", utterance: utterance.id}
              - @tagTypes.each do |tag|
                %option{selected: (@tags.include?(utterance.id)) && (@tags[utterance.id].map(&:tag_type_id).include?(tag.id))} #{tag.label}
          %td= utterance.text
