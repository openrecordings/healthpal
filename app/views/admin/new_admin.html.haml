#new-admin-form.centered-form-container
  %p.form-title
    Enter information for new admin account
  = form_with(url: create_admin_path) do |f|
    .form-field-container.field-centered
      .form-label.margin-top-15
        Admin for
      - select_options = options_from_collection_for_select(@orgs, 'id', 'name')
      = f.select(:org_id, select_options, {include_blank: true}, {class: 'form-input select-css'})
    .form-field-container.field-centered
      .form-label.margin-top-15
        First name
      = f.text_field :first_name, class: 'form-input'
    .form-field-container.field-centered
      .form-label.margin-top-15
        Last name
      = f.text_field :last_name, class: 'form-input'
    .form-field-container.field-centered
      .form-label.margin-top-15
        Email
      = f.email_field :email, class: 'form-input'
    .form-field-container.field-centered
      .form-label.margin-top-15
        Password
        = f.password_field :password, class: 'form-input password'
    .form-field-container.field-centered
      .form-label.margin-top-15
        Confirm password
        = f.password_field :password_2, class: 'form-input password-2'
    .form-field-container.field-centered
      .margin-top-15
        = f.submit 'Create admin', class: 'button'
    .form-field-container.field-centered
    .margin-top-15
      = button_to 'Cancel', admin_path, class: 'button', method: :get
