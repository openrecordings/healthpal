%table
  %th
    %tr
      %td text
      %td tags
      %td new tag
      %td links
  - @recording.utterances.each do |u|
    %tr
      %td= u.text
      %td
        - u.tags.each do |t|
          %div="#{t.id} #{t.label}"

      %td 
        = form_for :tag do |f|
          = r.hidden_field :utterance_id, u.id
          = f.label :tag_type_id
          = f.number_field :tag_type_id
          = f.submit
