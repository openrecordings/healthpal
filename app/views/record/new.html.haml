%select#audioSource
%select#videoSource

#record-controls
  
  #choose-av
    %p What would you like to record?
    %div
      %input{type: 'radio', "data-requested-media" => "audio", name: 'requested-media'}
      %label{for: 'toggle-audio-input'} Audio
    %div
      %input{type: 'radio', "data-requested-media" => "video", name: 'requested-media'}
      %label{for: 'toggle-video-input'} Video
    %div
      %input{type: 'radio', "data-requested-media" => "audio-video", name: 'requested-media'}
      %label{for: 'toggle-video-input'} Both audio and video

  #recording-controls
    %button#media-start-button.btn.btn-danger Turn on camera/microphone

  #record-start-stop
    %button#record-start-button.btn.btn-danger Start recording now
    %button#record-stop-button.btn.btn-danger Stop recording now

%canvas#record-audio-meter{width: '500', height: '50'}

%video#record-video{autoplay: true}

