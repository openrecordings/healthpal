#nav-container{class: current_user&.privileged? ? 'admin-background' : nil}
  #logo-container
    #logo-spans
      %span= image_tag('open_recordings', width: '120px')
      %span#logo-health Health
      %span#logo-pal> PAL
  - if user_signed_in?
    #menu-container
      #menu-spans
        %ul
          - if current_user.privileged?
            %li= link_to 'Manage Recordings', root_path
            %li= link_to 'User Management', admin_path
          %li= link_to 'New Recording', record_path
          %li= link_to 'Recordings', my_recordings_path
          %li= link_to 'Sharing', shares_path
        %ul
          %li= link_to "Account <span class='fa fa-cog' style='margin-right: 3px;'></span>".html_safe, edit_user_registration_path
          %li= link_to "Sign out #{current_user.full_name}", destroy_user_session_path, method: :delete
