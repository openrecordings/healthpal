- menu_class = {horiz: 'menu-horiz', vert: 'menu-vert'}[orientation]
- menu_class_selected = "#{menu_class}-selected"

=link_to t(:help),
    help_path,
    id: 'nav-help',
    class: "responsive-font-size menu-item-#{position} #{current_path_in?(help_path) ? menu_class_selected : menu_class}"
=link_to "#{t(:account)} <span class='local-fa-small fa fa-cog' style='margin-#{position}: 3px;'></span>".html_safe,
    edit_user_registration_path,
    id: 'nav-account',
    class: "responsive-font-size menu-item-#{position} #{current_path_in?(edit_user_registration_path) ? menu_class_selected : menu_class}"
- locale_strings = {en: 'Español', es: 'English'}
- locale_link_text = !!current_user.locale ? locale_strings[current_user.locale.to_sym] : 'Español'
=link_to locale_link_text,
    '#',
    id: 'toggle-locale',
    class: "responsive-font-size #{menu_class}"
=link_to "#{t(:sign_out)} #{current_user.email}",
    destroy_user_session_path,
    method: :delete,
    id: 'nav-signout',
    class: "responsive-font-size menu-item-#{position} #{current_path_in?(destroy_user_session_path) ? menu_class_selected : menu_class}"
