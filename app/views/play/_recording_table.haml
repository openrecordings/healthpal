.recording-table-container(data-user-id="#{testing_arr[0][0][0].user_id}")
  %table
    %tbody
      - testing_arr.each do |year_array|
        %tr.table-row.list-item.vis 
          %td
            .recording-year
              = inline_svg('play.svg', class: 'expand-svg')
              .padding-test
              = inline_svg('folder-fill.svg', class: 'folder-svg')
              .year-title= year_array[0][0].created_at.strftime("%Y Appointments")
        %tr.table-row
          %td
            .table-wrapper.hidden
              %table
                %tbody
                  - year_array.each do |month_array|
                    %tr.table-row.list-item
                      %td
                        .recording-month
                          = inline_svg('play.svg', class: 'expand-svg')
                          .padding-test
                          = inline_svg('folder-fill.svg', class: 'folder-svg')
                          .month-title= month_array[0].created_at.strftime("%B Appointments")
                    %tr.table-row
                      %td
                        .table-wrapper.hidden
                          %table
                            %tbody
                              - month_array.each do |recording|
                                %tr.table-row.list-item
                                  %td
                                    .recording-list-item.log(id="select-recording-#{recording.id}" data-recording-id="#{recording.id}")
                                      .recording-description
                                        .padding-test
                                        = inline_svg('file-earmark-play-fill.svg', class: 'folder-svg')
                                        .recording-title= recording.title
                                        - if recording.provider
                                          .recording-provider.italic-note= recording.provider
                                      .recording-date
                                        .recording-date= minimal_date(recording.created_at)
                                        .recoording-days-ago.italic-note= days_ago(recording.created_at)
                          