  #tag-table
    = video_tag(send_media_path(@recording.id),
      id: 'audio-element',
      type: 'video/mp4',
      'data-recording-id': @recording.id,
      controls: false,
      class: ('hidden' unless @recording.is_video),
      height: ('100%' if @recording.is_video))
    - unless @recording.is_video
      %table
        %thead
          %tr#header-row
            %th Start - End
            %th Topics discussed
            %th Links to external information
        %tbody
          %tr#empty-result-message.hidden
            %td{align: 'center', colspan: 3}
              No results found for that topic
          - @utterances.each do |utterance|
            %tr
              -# %td= utterance.tag_types.map{|tt| tt.label}
              -# %td{calspan: 2}= utterance.text
              - if utterance.tmp_tag_types.any?
                - tag_type_ids = utterance.tmp_tag_types.map{|t| t.id }
                %tr.tag-row{'data-tag-type-ids': tag_type_ids,
                  'data-text': utterance.text,
                  'data-start-time': utterance.begins_at,
                  'data-end-time': utterance.ends_at}
                  %td.tag-cell.click-to-seek{'data-start-time': utterance.begins_at}= "#{mm_ss(utterance.begins_at)} - #{mm_ss(utterance.ends_at)}"
                  %td.tag-cell.click-to-seek{'data-start-time': utterance.begins_at}
                    - utterance.tmp_tag_types.each do |tag_type|
                      .tag{class: "filter-#{tag_type.id}"}= tag_type.label
                  %td.tag-cell.click-to-seek{'data-start-time': utterance.begins_at}
                    - utterance.links.each do |link|
                      %a.link{href: link.url, target: '_blank'}
                        =link.label
                        %svg#glyphicons-basic.small-svg{:viewbox => "0 0 32 32", :xmlns => "http://www.w3.org/2000/svg"}
                          %path#square-new-window{:d => "M24,15.57251l3,3V23.5A3.50424,3.50424,0,0,1,23.5,27H8.5A3.50424,3.50424,0,0,1,5,23.5V8.5A3.50424,3.50424,0,0,1,8.5,5h4.92755l3,3H8.5a.50641.50641,0,0,0-.5.5v15a.50641.50641,0,0,0,.5.5h15a.50641.50641,0,0,0,.5-.5ZM19.81952,8.56372,12.8844,17.75a.49989.49989,0,0,0,.04547.65479l.66534.66528a.49983.49983,0,0,0,.65479.04553l9.18628-6.93518,2.12579,2.12585a.5.5,0,0,0,.84741-.27526l1.48273-9.35108a.50006.50006,0,0,0-.57214-.57214L17.969,5.59058a.5.5,0,0,0-.27526.84741Z"}
              - else
                %tr.hidden
                  %td.tag-cell.hidden{'data-start-time': utterance.begins_at}
                  %td.tag-cell.hidden{'data-start-time': utterance.begins_at}
                  %td.tag-cell.hidden{'data-start-time': utterance.begins_at}

  - unless @recording.is_video
    #sidebar
      #filter-container
        #filter-header
          Filter
        #search-container
          .user-field-content.no-input
            by Text
          %input#search-input.user-field-content
          .user-field-content.no-input
            by Topics
        #filters
          - TagType.all.order(:label).each do |tag_type|
            .filter-button{'data-tag-type-id': tag_type.id, class: "filter-#{tag_type.id}" }
              .filter-check
                %svg.check-glyph.svg.hidden{:viewbox => "0 0 32 32", :xmlns => "http://www.w3.org/2000/svg"}
                  %path#check{:d => "M27.37592,9.70459l-14.151,15.97693a.99985.99985,0,0,1-1.47558.02356L4.59711,18.1322a.99992.99992,0,0,1-.05384-1.31128L5.495,15.63123a.99994.99994,0,0,1,1.22808-.26966L12,18,24.79724,7.09863a.99991.99991,0,0,1,1.35553.0542l1.1817,1.18164A1,1,0,0,1,27.37592,9.70459Z"}
              .filter-label= tag_type.label
        #show-all-topics
          Show all topics
