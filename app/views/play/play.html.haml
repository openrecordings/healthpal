%h3= "#{@transcript.recording.user.email}, recorded #{format_date_time @transcript.recording.created_at}"
%div#recording-container{data: {file: @transcript.recording_id}}
%table.table.table
  %thead
    %tr
      %th mm:ss
      %th Tags
    %tbody
      - @transcript.utterances.each do |utterance|
        - @tags.each do |utag|
          %tr.segment{data: {time: utterance.begins_at}}
          - utag.each do |tag|
            %td Hello: #{tag.utterance.text} #{utterance.text} xxxx
