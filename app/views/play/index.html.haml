#video-container.hidden
#play-view{'data-initial-recording-id': @recording&.id}
  #left
    #search-and-select
      #select-header Select a recording
      -# TODO
      -# #search
      -#   = render 'search'
      #select
        - @recordings.each do |recording|
          = render 'recording_list_item', recording: recording
  #right
    #player-container
      #header
        #header-left
          #recording-title
          #recording-provider
        #header-right
          #recording-date
          #recording-days-ago
      #notes.full-center
      #player
        #timeline-container
          #timeline.track
          #progress-bar
          #playhead.track
        #time
          %span#current-time
            00:00
          %span#duration
            00:00
        #player-button-container
          #rewind-button.player-button.track
            = inline_svg('skip_to_start.svg', class: 'player-button-svg')
            .player-button-label= t(:rewind)
          #back-button.player-button.track
            = inline_svg('step_back.svg', class: 'player-button-svg')
            .player-button-label= t(:back_10_sec )
          #play-pause-button.player-button.track
            = inline_svg('play.svg', id: 'play-glyph', class: 'player-button-svg')
            = inline_svg('pause.svg', id: 'pause-glyph', class: 'player-button-svg hidden')
            #play-label.player-button-label= t(:play)
            #pause-label.player-button-label.hidden= t(:pause)
          #forward-button.player-button.track
            = inline_svg('step_forward.svg', class: 'player-button-svg')
            .player-button-label= t(:forward_10_sec)
          #mute-button.player-button.track
            = inline_svg('volume_off.svg', id: 'mute-glyph', class: 'player-button-svg')
            = inline_svg('volume_max.svg', id: 'unmute-glyph', class: 'player-button-svg hidden')
            #mute-label.player-button-label= t(:mute)
            #unmute-label.player-button-label.hidden= t(:unmute)
      #show-select
        = inline_svg('arrow-left.svg', class: 'small-svg')
        %span.text-with-svg Select&nbsp;&nbsp;&nbsp;&nbsp;