#play-view{'data-initial-recording-id': @recording&.id}
  #left
    #search-and-select
      #search
        = render 'search'
      #select
        - @recordings.each do |recording|
          = render 'recording_list_item', recording: recording
  #right
    #video-container.hidden
    #player-container
      #header
        Current recording:
        %span#current-recording-title
        #show-select < Select a different recording
      #notes
        Notes
      #player
        #timeline-container
          #timeline.track
          #progress-bar
          #playhead.track
        #time
          %span#current-time
            00:00
          %span#duration
            00:00
        #playback-button-container
          #rewind-button.player-button.track
            = inline_svg('skip_to_start.svg', class: 'player-button-svg')
            -# %span.button-label= t(:rewind)
          #back-button.player-button.track
            = inline_svg('step_back.svg', class: 'player-button-svg')
            -# %span.button-label= t(:back_10_sec )
          #play-pause-button.player-button.track
            = inline_svg('play.svg', class: 'player-button-svg')
            = inline_svg('pause.svg', class: 'player-button-svg')
            .full-center
              %span#play-label.absolute.play-pause-label
                -# %span.button-label= t(:play)
              %span#pause-label.invisible.absolute.play-pause-label
                -# %span.button-label= t(:pause)
          #forward-button.player-button.track
            = inline_svg('step_forward.svg', class: 'player-button-svg')
            -# %span.button-label= t(:forward_10_sec)
          #mute-button.player-button.track
            = inline_svg('volume_off.svg', class: 'player-button-svg')
            = inline_svg('volume_max.svg', class: 'player-button-svg')
            %span#mute-label
              -# %span.button-label= t(:mute)
            %span#unmute-label.hidden
              -# %span.button-label= t(:unmute)