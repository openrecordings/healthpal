.overlay#intro-overlay
  .overlay-video
    = video_tag 'intro_video.mp4', controls: true, id: 'intro-video'
  .overlay-video.margin-top-100#intro-text-container
    .full-center.huge
      %span.blue-text Welcome to&nbsp;
      %span#logo-health Health
      %span#logo-pal> PAL
    .full-center.form-field-container.margin-top-40
      = link_to 'Watch the introductory video now', 'javascript:;', class: 'button', id: 'watch-now'
    .full-center.form-field-container.margin-top-40
      = link_to 'Watch later', 'javascript:;', class: 'button', id: 'watch-later'
    .full-center
      .field-centered.text-left.margin-top-40.smaller
        = link_to "Don't ask me again", 'javascript:;', id: 'never-watch'
